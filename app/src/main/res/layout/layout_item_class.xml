<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/classPredmet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/classTip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/classTip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classPredmet"
        app:layout_constraintBottom_toTopOf="@+id/classProfesor"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/classProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classTip"
        app:layout_constraintBottom_toTopOf="@+id/classUcionica"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/classUcionica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classProfesor"
        app:layout_constraintBottom_toTopOf="@+id/classGrupa"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/classGrupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classUcionica"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>
    <TextView
        android:id="@+id/classDan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/classPredmet"
        app:layout_constraintStart_toEndOf="@+id/classPredmet"/>
    <TextView
        android:id="@+id/classVreme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/classTip"
        app:layout_constraintTop_toTopOf="@+id/classTip" />


</androidx.constraintlayout.widget.ConstraintLayout>